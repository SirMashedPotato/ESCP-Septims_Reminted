	<!-- ==========[ESCP_Currency_MeltingRecipe_Base]========== -->
	<RecipeDef Name="ESCP_Currency_MeltingRecipe_Base" Abstract="True">
		<workAmount>200</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<jobString>Melting septims.</jobString>
		<recipeUsers>
			<li>FueledSmithy</li>
			<li>ElectricSmithy</li>
			<li MayRequire="DankPyon.Medieval.Overhaul">FueledSmithy</li>
			<li MayRequire="SirMashedPotato.MorrowRim.TelvanniTechnology">MorrowRim_TelvanniForge</li>
			<li MayRequire="SirMashedPotato.MorrowRim.DunmerArmouryLite">MorrowRim_Dunmer_DunmerForgeFuelled</li>
			<li MayRequire="SirMashedPotato.MorrowRim.DunmerArmouryLite">MorrowRim_Dunmer_DunmerForgeElectric</li>
		</recipeUsers>
	</RecipeDef>
	<!-- ==========[ESCP_Currency_MeltingRecipe_SeptimToGold]========== -->
	<RecipeDef ParentName="ESCP_Currency_MeltingRecipe_Base">
		<defName>ESCP_Currency_MeltingRecipe_SeptimToGold</defName>
		<label>melt septims</label>
		<description>Melt down 10 septims into 1 piece of gold.</description>
		
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ESCP_CurrencySeptim</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ESCP_CurrencySeptim</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Gold>1</Gold>
		</products>
	</RecipeDef>
